<%- include('layout', { title: 'Materias' }) %>
<div class="card">
    <h2>Gestor de Materias</h2>

    <% if (user && user.role === 'admin') { %>
        <form action="/materias" method="post" class="inline-form">
            <input name="nombre" placeholder="Nombre de la materia" required />
            <input name="descripcion" placeholder="Descripción (opcional)" />
            <button class="btn">Agregar materia</button>
        </form>
    <% } %>

    <% if (materias && materias.length > 0) { %>
        <table class="tabla">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% materias.forEach(m => { %>
                    <tr>
                        <td><%= m.nombre %></td>
                        <td><%= m.descripcion || '-' %></td>
                        <td>
                            <% if (user && user.role === 'admin') { %>
                                <form style="display:inline" method="post" action="/materias/<%= m.id %>/edit" class="edit-form">
                                    <input name="nombre" value="<%= m.nombre %>" style="width:150px; display:inline-block;" required />
                                    <input name="descripcion" value="<%= m.descripcion || '' %>" style="width:200px; display:inline-block;" />
                                    <button type="submit" class="link-btn">Actualizar</button>
                                </form>
                                <form style="display:inline" action="/materias/<%= m.id %>/delete" method="post" onsubmit="return confirm('¿Eliminar esta materia?');">
                                    <button type="submit" class="link-btn">Eliminar</button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <div style="text-align: center; padding: 40px; color: #7f8c8d;">
            <p style="font-size: 1.1rem;">No hay materias registradas aún.</p>
            <% if (user && user.role === 'admin') { %>
                <p style="margin-top: 10px; font-size: 0.9rem;">Usa el formulario de arriba para agregar una.</p>
            <% } %>
        </div>
    <% } %>
</div>
<%- include('footer') %>

