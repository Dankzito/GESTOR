<%- include('layout', { title: 'Materias' }) %>
<div class="card">
    <h2>Gestor de Materias</h2>

    <% if (user && user.role === 'admin') { %>
        <form action="/materias" method="post" class="inline-form">
            <input name="nombre" placeholder="Nombre de la materia" required />
            <select name="ano" required style="min-width: 150px;">
                <option value="" disabled selected>Seleccionar Año</option>
                <option value="1°">1°</option>
                <option value="2°">2°</option>
                <option value="3°">3°</option>
                <option value="4°">4°</option>
                <option value="5°">5°</option>
                <option value="6°">6°</option>
                <option value="7°">7°</option>
            </select>
            <button class="btn">Agregar materia</button>
        </form>
    <% } %>

    <% if (materias && materias.length > 0) { %>
        <table class="tabla">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Año</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% materias.forEach(m => { %>
                    <tr>
                        <td><%= m.nombre %></td>
                        <td><%= m.ano || m.descripcion || '-' %></td>
                        <td>
                            <% if (user && user.role === 'admin') { %>
                                <form style="display:inline" method="post" action="/materias/<%= m.id %>/edit" class="edit-form">
                                    <input name="nombre" value="<%= m.nombre %>" style="width:150px; display:inline-block;" required />
                                    <select name="ano" required style="width:100px; display:inline-block;">
                                        <option value="1°" <%= (m.ano || m.descripcion) === '1°' ? 'selected' : '' %>>1°</option>
                                        <option value="2°" <%= (m.ano || m.descripcion) === '2°' ? 'selected' : '' %>>2°</option>
                                        <option value="3°" <%= (m.ano || m.descripcion) === '3°' ? 'selected' : '' %>>3°</option>
                                        <option value="4°" <%= (m.ano || m.descripcion) === '4°' ? 'selected' : '' %>>4°</option>
                                        <option value="5°" <%= (m.ano || m.descripcion) === '5°' ? 'selected' : '' %>>5°</option>
                                        <option value="6°" <%= (m.ano || m.descripcion) === '6°' ? 'selected' : '' %>>6°</option>
                                        <option value="7°" <%= (m.ano || m.descripcion) === '7°' ? 'selected' : '' %>>7°</option>
                                    </select>
                                    <button type="submit" class="link-btn">Actualizar</button>
                                </form>
                                <form style="display:inline" action="/materias/<%= m.id %>/delete" method="post" onsubmit="return confirm('¿Eliminar esta materia?');">
                                    <button type="submit" class="link-btn">Eliminar</button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <div style="text-align: center; padding: 40px; color: #7f8c8d;">
            <p style="font-size: 1.1rem;">No hay materias registradas aún.</p>
            <% if (user && user.role === 'admin') { %>
                <p style="margin-top: 10px; font-size: 0.9rem;">Usa el formulario de arriba para agregar una.</p>
            <% } %>
        </div>
    <% } %>
</div>
<%- include('footer') %>

