<%- include('layout', { title: 'Cursos' }) %>
<div class="card">
    <h2>Gestor de Cursos</h2>

    <% if (user && user.role === 'admin') { %>
        <form action="/cursos" method="post" class="inline-form">
            <input name="nombre" placeholder="Nombre del curso" required />
            <input name="descripcion" placeholder="Descripción (opcional)" />
            <button class="btn">Agregar curso</button>
        </form>
    <% } %>

    <% if (cursos && cursos.length > 0) { %>
        <table class="tabla">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% cursos.forEach(c => { %>
                    <tr>
                        <td><%= c.nombre %></td>
                        <td><%= c.descripcion || '-' %></td>
                        <td>
                            <% if (user && user.role === 'admin') { %>
                                <form style="display:inline" method="post" action="/cursos/<%= c.id %>/edit" class="edit-form">
                                    <input name="nombre" value="<%= c.nombre %>" style="width:150px; display:inline-block;" required />
                                    <input name="descripcion" value="<%= c.descripcion || '' %>" style="width:200px; display:inline-block;" />
                                    <button type="submit" class="link-btn">Actualizar</button>
                                </form>
                                <form style="display:inline" action="/cursos/<%= c.id %>/delete" method="post" onsubmit="return confirm('¿Eliminar este curso?');">
                                    <button type="submit" class="link-btn">Eliminar</button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <div style="text-align: center; padding: 40px; color: #7f8c8d;">
            <p style="font-size: 1.1rem;">No hay cursos registrados aún.</p>
            <% if (user && user.role === 'admin') { %>
                <p style="margin-top: 10px; font-size: 0.9rem;">Usa el formulario de arriba para agregar uno.</p>
            <% } %>
        </div>
    <% } %>
</div>
<%- include('footer') %>

